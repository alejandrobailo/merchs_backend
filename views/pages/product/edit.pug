extends ../../layouts/dashboard.pug

block content

    .container-fuid
        a(href="/products").btn.btn-sm.btn-info.my-2.row Go back 
        .row
            .card.mb-3.col-6
                div.row.no-gutters
                    div.col-md-4
                        img(src=product.image_1 class="card-img" alt="img")
                    div.col-md-8
                        div.card-body
                            h5(class="card-title")=product.title
                            p(class="card-text")=product.description
                            p(class="card-text")=`${product.price} â‚¬`
                            p(class="card-text")=`Discount: ${product.discount}%`

                            p.card-text     
                                small(class="text-mutedLast")=date

            form.form-group.mx-2(action="")
                h4 Edit product
                input.form-control(placeholder="Title")
                input.form-control(placeholder="Description")
                input.form-control(placeholder="Price")
