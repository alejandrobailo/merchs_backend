extends ../../layouts/dashboard.pug

block content

    div.container-fluid

        h2 List of Orders

        .table-responsive
            table#dataTable.table.table-bordered.my-2(width='100%', cellspacing='0')
                thead.thead-dark
                    tr
                        th Order ID
                        th Order Date
                        th Order Status
                        th Customer Name
                        th Customer Email
                        th Product SKU
                        th Product Name
                        th
                    
                tbody.table-dark
                    each order in orders
                        tr
                            td= order.fk_order
                            td= order.order_date
                            td= order.order_status
                            td= order.first_name
                            td= order.email
                            td= order.sku
                            td= order.title
                            td
                                a.btn.btn-sm.btn-primary(href='/users/edit') Check Order
                                a.btn.btn-sm.btn-danger(href='/users/delete') Delete Order

    script.
        $(document).ready( function () {
            $('#dataTable').DataTable();
        } );