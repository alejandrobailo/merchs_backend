extends ../layout

block content
  a(href="/products/new")
    button.btn.btn-info New product
  table.table.my-2
    thead.thead-dark
      tr
        th SKU
        th Title
        th Description
        th Brand
        th Category
        th Price
        th 
    tbody
      each product in products=products
        tr
          td= product.sku 
          td= product.title 
          td= product.description 
          td= product.brand_name
          td= product.category_name
          td= product.price
          td
            a(href='#') Editar 
